<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0" xmlns="http://java.sun.com/xml/ns/persistence">
  <persistence-unit name="persistenceUnit" transaction-type="RESOURCE_LOCAL">
    <properties>
      {% if values.database_type == "postgresql" %}
      <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver" />
      <property name="javax.persistence.jdbc.url" value=">jdbc:postgresql://${{values.database_host}}:${{values.database_port}}/${{values.database_name}}"/>
      <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQL95Dialect"/>
      {% endif %}
      <property name="javax.persistence.jdbc.user" value="${{values.database_user}}" />
      <property name="javax.persistence.jdbc.password" value="${{values.database_user_password}}" />

      <property name="hibernate.hbm2ddl.auto" value="create-drop" />

      <property name="hibernate.show_sql" value="true" />
      <property name="hibernate.format_sql" value="true" />
    </properties>
  </persistence-unit>
</persistence>
